// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  username String?
  email String @unique
  password String
  items UserItem[]
  trades UserTrade[]
  coins BigInt
}

model Item {
  id String @id @default(uuid())
  name String
  users UserItem[]
}

model UserItem {
  user User @relation(fields:[userId], references: [id])
  userId String
  item Item @relation(fields: [itemId], references: [id])
  itemId String
  trade UserTrade? @relation(fields: [tradeId],references: [id])
  tradeId String?
  count Int
  @@id([userId, itemId])
}


model Trade {
  id String @id @default(uuid())
  users UserTrade[]
}

model UserTrade {
  id String @id @default(uuid())
  trade Trade @relation(fields: [tradeId], references: [id])
  tradeId String
  user User @relation(fields: [userId], references: [id])
  userId String
  items UserItem[]
  status TradeStatus  
}

enum TradeStatus {
  AWAITING
  ACCEPTED
  DECLINED
}